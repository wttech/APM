<?xml version="1.0" encoding="UTF-8"?>
<jcr:root xmlns:sling="http://sling.apache.org/jcr/sling/1.0" xmlns:granite="http://www.adobe.com/jcr/granite/1.0" xmlns:cq="http://www.day.com/jcr/cq/1.0" xmlns:jcr="http://www.jcp.org/jcr/1.0" xmlns:nt="http://www.jcp.org/jcr/nt/1.0"
          jcr:primaryType="cq:Page">
    <jcr:content
            jcr:mixinTypes="[sling:VanityPath]"
            jcr:primaryType="nt:unstructured"
            jcr:title="APM Dashboard"
            sling:resourceType="granite/ui/components/shell/collectionpage"
            sling:vanityOrder="{Long}301"
            sling:vanityPath="/apm/dashboard"
            consoleId="cq-bridge-data-collections"
            currentView="${state[&quot;products.shell.collectionpage.layoutId&quot;].string}"
            modeGroup="cq-experience-fragments-admin-childpages"
            omnisearchLocationPath="/libs/granite/omnisearch/content/metadata/experiencefragments"
            pageURITemplate="/apm/dashboard.html{+id}"
            targetCollection=".cq-experience-fragments-admin-childpages">
        <head jcr:primaryType="nt:unstructured">
            <clientlibs
                    jcr:primaryType="nt:unstructured"
                    sling:resourceType="granite/ui/components/coral/foundation/includeclientlibs"
                    categories="[cq.common.wcm,cq.sites.collectionpage,cq.siteadmin.admin.page.row,cq.experiencefragments.components.experiencefragment]"/>
        </head>
        <views jcr:primaryType="nt:unstructured">
            <list
                    granite:rel="cq-experience-fragments-admin-childpages"
                    jcr:primaryType="nt:unstructured"
                    jcr:title="List View"
                    sling:resourceType="granite/ui/components/coral/foundation/table"
                    icon="viewList"
                    layoutId="list"
                    limit="{Long}40"
                    modeGroup="cq-experience-fragments-admin-childpages"
                    path="${requestPathInfo.suffix}"
                    rootPath="/conf/apm/scripts"
                    rowReorderAction="/bin/wcmcommand?cmd=movePage&amp;srcPath={item}&amp;destPath={item}&amp;before={before}&amp;_charset_=utf-8&amp;"
                    selectionMode="row"
                    size="${empty requestPathInfo.selectors[1] ? &quot;40&quot; : requestPathInfo.selectors[1]}"
                    sortMode="remote"
                    src="/mnt/overlay/apm/dashboard/jcr:content/views/list{.offset,limit}.html{+id}{?sortName,sortDir}"
                    stateId="xf.shell.collectionpage">
                <columns jcr:primaryType="nt:unstructured">
                    <select
                            jcr:primaryType="nt:unstructured"
                            select="{Boolean}true"/>
                    <title
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Script"
                            sortable="{Boolean}true"/>
                    <author
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Author"
                            sortable="{Boolean}true"/>
                    <valid
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Valid"
                            sortable="{Boolean}true"/>
                    <executable
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Executable"
                            sortable="{Boolean}true"/>
                    <updated
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Updated at"
                            sortable="{Boolean}true"
                            sortType="date"/>
                    <lastrun
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Last Run"
                            sortable="{Boolean}true"
                            sortType="date"/>
                    <lastdryrun
                            jcr:primaryType="nt:unstructured"
                            jcr:title="Last Dry Run"
                            sortable="{Boolean}true"
                            sortType="date"/>
                </columns>
                <datasource
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="cq/gui/components/common/wcm/datasources/childpages"
                        itemResourceType="apm/components/dashboard/row"
                        limit="${empty requestPathInfo.selectors[1] ? &quot;41&quot; : requestPathInfo.selectors[1] + 1}"
                        offset="${requestPathInfo.selectors[0]}"
                        path="${requestPathInfo.suffix}"
                        sortDir="${param.sortDir}"
                        sortName="${param.sortName}"/>
            </list>
        </views>
        <breadcrumbs
                jcr:primaryType="nt:unstructured"
                sling:resourceType="wcm/commons/ui/shell/datasources/breadcrumbs"
                path="${requestPathInfo.suffix}"
                rootPath="/etc/bridge/collections"
                rootTitle="Data Collections"/>
        <actions jcr:primaryType="nt:unstructured">
            <secondary jcr:primaryType="nt:unstructured">
                <create
                        granite:id="xf-create-pulldown"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/pulldown"
                        text="Create"
                        variant="primary">
                    <items jcr:primaryType="nt:unstructured">
                        <createcollection
                                granite:comment="The actionlink uses the URI derived from the `href.uritemplate` value on the `data` node. The `href` attribute is  only used externally (e.g. HApi tests), not by the actionlink itself"
                                granite:rel="cq-experiencefragments-admin-create-xf"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/collection/actionlink"
                                action="foundation.link"
                                href="/apps/accelerator/bridge/wizards/createcollection.html${requestPathInfo.suffix}"
                                icon="collectionAdd"
                                relScope="collection"
                                target=".cq-experience-fragments-admin-childpages"
                                text="Data Collection">
                            <data
                                    jcr:primaryType="nt:unstructured"
                                    href.uritemplate="/apps/accelerator/bridge/wizards/createcollection.html{+id}"/>
                        </createcollection>
                        <createfolder
                                granite:comment="The actionlink uses the URI derived from the `href.uritemplate` value on the `data` node. The `href` attribute is  only used externally (e.g. HApi tests), not by the actionlink itself"
                                granite:id="cq-experiencefragments-admin-createfolder"
                                granite:rel="cq-siteadmin-admin-createfolder"
                                jcr:primaryType="nt:unstructured"
                                sling:resourceType="granite/ui/components/coral/foundation/collection/actionlink"
                                action="foundation.dialog"
                                href="/mnt/overlay/wcm/core/content/coral/common/createfolderdialog.html${requestPathInfo.suffix}"
                                icon="folder"
                                relScope="collection"
                                target=".cq-experience-fragments-admin-childpages"
                                text="Folder">
                            <data
                                    jcr:primaryType="nt:unstructured"
                                    nesting="hide"
                                    src.uritemplate="/mnt/overlay/wcm/core/content/coral/common/createfolderdialog.html{+id}"/>
                        </createfolder>
                    </items>
                </create>
            </secondary>
            <selection jcr:primaryType="nt:unstructured">
                <viewproperties
                        granite:class="cq-siteadmin-admin-actions-properties-activator"
                        granite:comment="This button requires custom logic to show/hide, hence `activeSelectionCount` is not used"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        action="foundation.link"
                        activeSelectionCount="single"
                        icon="infoCircle"
                        relScope="item"
                        target=".cq-experience-fragments-admin-childpages"
                        text="Properties"
                        variant="actionBar">
                    <data
                            jcr:primaryType="nt:unstructured"
                            href.uritemplate="/mnt/overlay/wcm/core/content/sites/properties.html{?item*}"/>
                </viewproperties>
                <viewfolderproperties
                        granite:rel="cq-siteadmin-admin-actions-folderproperties-activator"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        action="foundation.link"
                        activeSelectionCount="single"
                        icon="infoCircle"
                        target=".cq-experience-fragments-admin-childpages"
                        text="Properties"
                        variant="actionBar">
                    <data
                            jcr:primaryType="nt:unstructured"
                            href.uritemplate="/mnt/overlay/wcm/core/content/sites/folderproperties.html{+item}"/>
                </viewfolderproperties>
                <publish
                        granite:class="foundation-collection-action"
                        granite:rel="cq-siteadmin-admin-actions-publish-activator"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        action="cq.wcm.publish"
                        icon="globe"
                        relScope="collection"
                        target=".cq-experience-fragments-admin-childpages"
                        text="Publish"
                        variant="actionBar">
                    <data
                            jcr:primaryType="nt:unstructured"
                            referenceSrc.url="/libs/wcm/core/content/reference.json?_charset_=utf-8{&amp;path*}"
                            wizardSrc.uritemplate="/mnt/overlay/wcm/core/content/sites/publishtemplatewizard.html?_charset_=utf-8{&amp;item*}"/>
                </publish>
                <unpublish
                        granite:class="foundation-collection-action"
                        granite:rel="cq-siteadmin-admin-actions-unpublish-activator"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        action="cq.wcm.unpublish"
                        icon="globeStrike"
                        relScope="collection"
                        target=".cq-experience-fragments-admin-childpages"
                        text="Unpublish"
                        variant="actionBar">
                    <data
                            jcr:primaryType="nt:unstructured"
                            referenceSrc.url="/bin/wcm/references.json?_charset_=utf-8{&amp;path*}"/>
                </unpublish>
                <deletepage
                        granite:class="foundation-collection-action"
                        granite:rel="cq-siteadmin-admin-actions-delete-activator"
                        jcr:primaryType="nt:unstructured"
                        sling:resourceType="granite/ui/components/coral/foundation/collection/action"
                        action="cq.wcm.delete"
                        icon="delete"
                        relScope="collection"
                        target=".cq-experience-fragments-admin-childpages"
                        text="Delete"
                        variant="actionBar"/>
            </selection>
        </actions>
    </jcr:content>
</jcr:root>